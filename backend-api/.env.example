# Environment Variables for Backend API
# Copy this to .env and fill in values

# Database
DATABASE_URL=postgresql+asyncpg://credverse:credverse@localhost:5432/credverse

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# S3/MinIO Settings
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=credverse

# OTP Settings
OTP_MOCK=true
OTP_EMAIL_PROVIDER=mailhog
OTP_SMS_PROVIDER=stub

# Email (Mailhog for dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
